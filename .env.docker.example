# Docker Compose environment variables

# Backend config
TT_ENV=prod
TT_BASE_URL=http://localhost:5173
TT_SQLITE_PATH=/data/app.db
TT_JWT_SECRET_KEY=change-me
TT_COOKIE_SECURE=false
TT_COOKIE_SAMESITE=lax

# Web Push (optional)
# Note: push notifications are sent by the optional `push-worker` profile.
# Start it with:
#   docker compose --profile push up --build
TT_VAPID_PUBLIC_KEY=
TT_VAPID_PRIVATE_KEY=
TT_VAPID_SUBJECT=mailto:admin@example.com
